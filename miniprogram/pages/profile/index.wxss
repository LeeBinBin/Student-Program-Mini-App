/* 覆盖全局page样式 */
page {
  display: block;
  min-height: 100vh;
  height: 100vh;
}

.container {
  min-height: 100vh;
  height: 100vh;
  background-color: #F5F5F5;
  padding: 0;
  margin: 0;
  overflow: hidden;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  height: 100vh;
  position: relative;
  overflow: hidden;
  width: 750rpx;
  padding: 0;
  margin: 0;
}

.login-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 50%, #06B6D4 100%);
  z-index: 0;
}

.login-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.login-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 40rpx;
  min-height: 100%;
  height: 100%;
}

.logo-wrapper {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 60rpx;
  position: relative;
}

.logo-wrapper::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: linear-gradient(135deg, #3B82F6, #06B6D4);
  border-radius: 50%;
  opacity: 0.3;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.5;
  }
}

.login-avatar {
  width: 300rpx;
  height: 300rpx;
  position: relative;
  z-index: 2;
  opacity: 0.9;
  filter: drop-shadow(0 8rpx 16rpx rgba(0, 0, 0, 0.2));
}

.title {
  font-size: 64rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 4rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #E0F2FE 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  width: 100%;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 80rpx;
  font-weight: 400;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  width: 100%;
  text-align: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 1.5;
}

.btn-login {
  width: 90% !important;
  max-width: 550rpx !important;
  height: 96rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F0F9FF 100%);
  color: #1E40AF;
  border-radius: 50rpx;
  font-size: 32rpx;
  border: none;
  margin-bottom: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2), 0 0 0 2rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.btn-login::after {
  border: none;
}

.btn-login:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.agreement {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.6;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.top-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0 80rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 50%, #06B6D4 100%);
  position: relative;
  overflow: hidden;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
  pointer-events: none;
}

.top-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
}

.user-tag {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.panel {
  width: 92%;
  max-width: 690rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  margin: -40rpx auto 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.panel-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 48rpx;
  border-bottom: 1rpx solid #F0F0F0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.panel-list-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #1E40AF, #3B82F6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.panel-list-item:active::before {
  opacity: 1;
}

.panel-list-item:active {
  background: #F8F9FA;
}

.panel-list-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.item-icon {
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
}

.item-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.arrow {
  font-size: 36rpx;
  color: #CCCCCC;
  font-weight: 300;
}

.logout-item .item-text {
  color: #EF4444;
}

.logout-item .item-icon {
  filter: grayscale(0.5);
}

/* 响应式设计 */
@media (max-height: 600px) {
  .login-container {
    padding: 60rpx 20rpx;
  }
  
  .login-content {
    padding: 0 20rpx;
  }
  
  .logo-wrapper {
    width: 220rpx;
    height: 220rpx;
    margin-bottom: 40rpx;
  }
  
  .login-avatar {
    width: 220rpx;
    height: 220rpx;
  }
  
  .title {
    font-size: 48rpx;
    margin-bottom: 16rpx;
    padding: 0 15rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
    margin-bottom: 60rpx;
    padding: 0 20rpx;
  }
  
  .btn-login {
    height: 80rpx;
    font-size: 28rpx;
    margin-bottom: 60rpx;
    width: 95% !important;
  }
  
  .agreement {
    padding: 0 20rpx;
    font-size: 22rpx;
  }
  
  .top-box {
    padding: 80rpx 0 60rpx;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    font-size: 60rpx;
  }
  
  .nickname {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .user-tag {
    font-size: 20rpx;
    padding: 6rpx 20rpx;
  }
  
  .panel-list-item {
    padding: 32rpx 40rpx;
  }
  
  .item-text {
    font-size: 28rpx;
  }
  
  .item-icon {
    font-size: 32rpx;
    width: 48rpx;
    height: 48rpx;
  }
}

@media (max-width: 375px) {
  .login-content {
    padding: 0 15rpx;
  }
  
  .title {
    padding: 0 10rpx;
    font-size: 56rpx;
  }
  
  .subtitle {
    padding: 0 15rpx;
    font-size: 26rpx;
  }
  
  .btn-login {
    width: 95% !important;
  }
  
  .agreement {
    padding: 0 15rpx;
    font-size: 22rpx;
  }
  
  .panel {
    width: 95%;
  }
  
  .panel-list-item {
    padding: 32rpx 36rpx;
  }
}

@media (max-width: 320px) {
  .title {
    font-size: 48rpx;
    padding: 0 10rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
    padding: 0 10rpx;
  }
  
  .btn-login {
    width: 98% !important;
    font-size: 26rpx;
  }
  
  .agreement {
    font-size: 20rpx;
    padding: 0 10rpx;
  }
}
