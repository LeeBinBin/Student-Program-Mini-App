.container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.login-avatar {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 60rpx;
  opacity: 0.5;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 120rpx;
}

.btn-login {
  width: 550rpx !important;
  height: 80rpx;
  background: #07C160;
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 30rpx;
  border: none;
  margin-bottom: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-login::after {
  border: none;
}

.agreement {
  font-size: 22rpx;
  color: #999999;
}

.top-box {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0 80rpx;
  background: linear-gradient(180deg, #1890FF 0%, #0F52BA 100%);
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.nickname {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.panel {
  width: 750rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.panel-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.panel-list-item:last-child {
  border-bottom: none;
}

.panel-list-item text:first-child {
  font-size: 32rpx;
  color: #333333;
}

.arrow {
  font-size: 28rpx;
  color: #CCCCCC;
}
