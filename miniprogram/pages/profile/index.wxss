/* 全局样式 */
.page {
  background-color: #F8F9FA;
  min-height: 100vh;
}

.container {
  padding: 0;
  min-height: 100vh;
  background-color: #F8F9FA;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  padding: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* 登录容器 */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 48rpx;
  min-height: 80vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.login-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 40rpx;
  padding: 80rpx 48rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
  text-align: center;
  width: 100%;
  max-width: 600rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.login-card:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 30rpx 80rpx rgba(0,0,0,0.2);
}

.login-icon {
  font-size: 144rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1E40AF;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.login-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.wechat-login-btn {
  background: linear-gradient(135deg, #07C160 0%, #05AE58 100%);
  color: #FFFFFF;
  padding: 32rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  border: none;
}

.wechat-login-btn:hover {
  background: linear-gradient(135deg, #05AE58 0%, #049A4E 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 36rpx rgba(7, 193, 96, 0.4);
}

.agreement {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 32rpx;
  line-height: 1.4;
}

.agreement text {
  color: #3B82F6;
  text-decoration: underline;
  cursor: pointer;
  transition: color 0.3s ease;
}

.agreement text:hover {
  color: #1E40AF;
}

.login-buttons {
  display: flex;
  gap: 32rpx;
  justify-content: center;
  margin-top: 8rpx;
}

.login-btn, .register-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.login-btn {
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 6rpx 20rpx rgba(30, 64, 175, 0.3);
}

.login-btn:hover {
  background: linear-gradient(135deg, #1E3A8A 0%, #2563EB 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 30rpx rgba(30, 64, 175, 0.4);
}

.register-btn {
  background: rgba(243, 244, 246, 0.8);
  color: #333333;
  border: 2rpx solid rgba(229, 231, 235, 0.8);
  backdrop-filter: blur(5px);
}

.register-btn:hover {
  background: rgba(229, 231, 235, 0.8);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

/* 装饰元素 */
.login-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(59, 130, 246, 0.1),
    transparent
  );
  animation: shimmer 3s infinite;
  pointer-events: none;
}

@keyframes shimmer {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 用户信息 */
.user-container {
  padding: 0 48rpx 48rpx;
}

.user-info {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
  color: #FFFFFF;
  flex-shrink: 0;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #666666;
}

/* 用户统计 */
.user-stats {
  display: flex;
  gap: 24rpx;
  margin-bottom: 48rpx;
  justify-content: space-between;
}

.stat-item {
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  text-align: center;
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1E40AF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 用户菜单 */
.user-menu {
  width: 100%;
  margin: 0 auto;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 48rpx;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.3s ease;
  cursor: pointer;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:hover {
  background-color: #F9FAFB;
  transform: translateX(8rpx);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  text-align: left;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: left;
}

.menu-arrow {
  font-size: 24rpx;
  color: #9CA3AF;
  text-align: right;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 0;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
  transform: scale(0.95);
  animation: modalScale 0.3s ease forwards;
}

@keyframes modalScale {
  to {
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 48rpx;
  border-bottom: 2rpx solid #E5E7EB;
  background-color: #F9FAFB;
  border-radius: 32rpx 32rpx 0 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 32rpx;
  color: #9CA3AF;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 8rpx;
  border-radius: 50%;
}

.modal-close:hover {
  background-color: #E5E7EB;
  color: #6B7280;
}

.modal-body {
  padding: 48rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1E40AF;
  box-shadow: 0 0 0 8rpx rgba(30, 64, 175, 0.1);
  outline: none;
}

.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.form-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
}

.primary-btn {
  background-color: #1E40AF;
  color: #FFFFFF;
}

.primary-btn:hover {
  background-color: #1E3A8A;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.3);
}

.secondary-btn {
  background-color: #F3F4F6;
  color: #333333;
  border: 2rpx solid #E5E7EB;
}

.secondary-btn:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .login-card {
    padding: 64rpx 32rpx;
  }
  
  .login-icon {
    font-size: 96rpx;
  }
  
  .login-title {
    font-size: 36rpx;
  }
  
  .user-info {
    flex-direction: column;
    text-align: center;
    padding: 40rpx;
  }
  
  .user-avatar {
    margin-bottom: 24rpx;
  }
  
  .user-stats {
    grid-template-columns: 1fr;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .menu-item {
    padding: 28rpx 32rpx;
  }
  
  .menu-icon {
    font-size: 32rpx;
    margin-right: 24rpx;
  }
  
  .modal-content {
    margin: 0 32rpx;
  }
  
  .modal-header {
    padding: 24rpx 32rpx;
  }
  
  .modal-body {
    padding: 32rpx;
  }
}