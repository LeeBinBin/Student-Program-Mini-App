}

.start-btn:hover {
  background: linear-gradient(135deg, #1E3A8A 0%, #2563EB 100%);
  box-shadow: 0 12rpx 28rpx rgba(30, 64, 175, 0.4);
  transform: translateY(-4rpx);
}

.start-btn:active {
