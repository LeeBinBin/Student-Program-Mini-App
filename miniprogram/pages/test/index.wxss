/* ÊµãËØïÈÄâÊã© */
.test-selection {
  margin-bottom: 48rpx;
  width: 100%;
}

.selection-container {
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  border: 2rpx solid #E5E7EB;
}

.selection-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
  text-align: center;
}

.selection-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.selection-item {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.selection-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.selection-label::before {
  content: "üìö";
  font-size: 32rpx;
}

.selection-item:nth-child(2) .selection-label::before {
  content: "üìñ";
}

.selection-picker {
  border: 2rpx solid #1E40AF;
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #F0F7FF 0%, #FFFFFF 100%);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.15);
}

.selection-picker::after {
  content: "‚ñº";
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #999999;
  pointer-events: none;
}

.selection-picker:focus-within {
  border-color: #1E40AF;
  box-shadow: 0 0 0 6rpx rgba(30, 64, 175, 0.1), 0 8rpx 20rpx rgba(30, 64, 175, 0.15);
  transform: translateY(-4rpx);
  background: linear-gradient(135deg, #FFFFFF 0%, #F0F7FF 100%);
}

.selection-picker:focus-within::after {
  color: #1E40AF;
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
  width: 100%;
  display: block;
  padding-right: 40rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.picker-text.placeholder {
  color: #999999;
  font-weight: 400;
}

.start-btn {
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  padding: 28rpx 64rpx;
  border-radius: 16rpx;
