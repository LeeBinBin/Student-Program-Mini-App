.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  padding-bottom: 40rpx;
}

.page-header {
  background-color: #FFFFFF;
  padding: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

.filter-container {
  background-color: #FFFFFF;
  width: 100%;
  margin: 0 0 32rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 10rpx rgba(0,0,0,0.08);
  box-sizing: border-box;
}

.filter-tabs {
  display: flex;
  overflow-x: auto;
  gap: 12rpx;
}

.tab-item {
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #6B7280;
  background-color: #F3F4F6;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #1E40AF;
  color: #FFFFFF;
  font-weight: 500;
}

.favorites-list {
  padding: 0 32rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 10rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.favorite-item:active {
  transform: scale(0.98);
}

.favorite-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.favorite-content {
  flex: 1;
}

.favorite-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.favorite-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.favorite-type {
  font-size: 24rpx;
  color: #6B7280;
  background-color: #F3F4F6;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.favorite-time {
  font-size: 24rpx;
  color: #9CA3AF;
}

.favorite-remove {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FEE2E2;
  color: #EF4444;
  border-radius: 50%;
  font-size: 32rpx;
  margin-left: 16rpx;
  transition: all 0.3s ease;
}

.favorite-remove:active {
  background-color: #FECACA;
  transform: scale(0.9);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #9CA3AF;
}
