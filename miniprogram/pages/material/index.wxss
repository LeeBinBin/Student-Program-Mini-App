/* 全局样式 */
.page {
  background-color: #F8F9FA;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  background-color: #F8F9FA;
}

/* 页面标题 */
.page-header {
  background-color: #FFFFFF;
  padding: 48rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  margin-bottom: 48rpx;
}

.page-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
}

/* 分类导航 */
.filter-container {
  background-color: #FFFFFF;
  width: 700rpx;
  margin: 0 64rpx 48rpx;
  padding: 48rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 12rpx rgba(0,0,0,0.1);
}

/* 学科标签 */
.filter-tabs {
  display: flex;
  overflow-x: auto;
  gap: 16rpx;
  padding-bottom: 32rpx;
  margin-bottom: 48rpx;
  border-bottom: 1px solid #E5E7EB;
}

.filter-tabs::-webkit-scrollbar {
  height: 8rpx;
}

.filter-tabs::-webkit-scrollbar-track {
  background: #F3F4F6;
  border-radius: 4rpx;
}

.filter-tabs::-webkit-scrollbar-thumb {
  background: #D1D5DB;
  border-radius: 4rpx;
}

.filter-tabs::-webkit-scrollbar-thumb:hover {
  background: #9CA3AF;
}

.tab-item {
  padding: 16rpx 32rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: #374151;
  background-color: #F3F4F6;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
  flex-shrink: 0;
}

.tab-item.active {
  background-color: #1E40AF;
  color: #FFFFFF;
  font-weight: 500;
}

.tab-item:hover {
  background-color: #E5E7EB;
  color: #374151;
}

.tab-item.active:hover {
  background-color: #1E3A8A;
  color: #FFFFFF;
}

/* 筛选条件 */
.filter-options {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter-item {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.filter-picker {
  border: 1px solid #E5E7EB;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

.filter-picker:focus-within {
  border-color: #1E40AF;
  box-shadow: 0 0 0 6rpx rgba(30, 64, 175, 0.1);
}

.picker-text {
  font-size: 28rpx;
  color: #333333;
}

.filter-btn {
  background-color: #1E40AF;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  width: 600rpx;
  margin-top: 20rpx;
}

.filter-btn:hover {
  background-color: #1E3A8A;
}

/* 资料列表 */
.material-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30rpx;
  margin: 0 48rpx 48rpx;
}

@media (min-width: 768px) {
  .material-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .material-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.material-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.material-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1), 0 8rpx 12rpx -4rpx rgba(0, 0, 0, 0.05);
}

.card-icon.pdf {
  color: #1E40AF;
}

.card-icon.video {
  color: #DC2626;
}

.card-icon.audio {
  color: #F59E0B;
}

.card-icon.ppt {
  color: #10B981;
}

.icon-text {
  font-size: 96rpx;
}

.card-body {
  padding: 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.card-type {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  align-self: flex-start;
}

.card-type.PDF {
  background-color: #DBEAFE;
  color: #1E40AF;
}

.card-type.video {
  background-color: #FEE2E2;
  color: #DC2626;
}

.card-type.audio {
  background-color: #FEF3C7;
  color: #F59E0B;
}

.card-type.ppt {
  background-color: #D1FAE5;
  color: #10B981;
}

.card-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 32rpx;
  flex: 1;
}

.card-stats {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 28rpx;
}

.stat-text {
  font-size: 24rpx;
  color: #666666;
}

.card-actions {
  display: flex;
  gap: 16rpx;
  margin-top: auto;
}

.action-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
}

.preview-btn {
  background-color: #1E40AF;
  color: #FFFFFF;
}

.preview-btn:hover {
  background-color: #1E3A8A;
}

.download-btn {
  background-color: #F59E0B;
  color: #FFFFFF;
}

.download-btn:hover {
  background-color: #D97706;
}

.play-btn {
  background-color: #10B981;
  color: #FFFFFF;
}

.play-btn:hover {
  background-color: #059669;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin: 0 48rpx 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

/* 分页 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin: 48rpx 0;
}

.pagination-item {
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #6B7280;
  background-color: #FFFFFF;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1px solid #E5E7EB;
}

.pagination-item.active {
  background-color: #1E40AF;
  color: #FFFFFF;
  border-color: #1E40AF;
  font-weight: 500;
}

.pagination-item:hover:not(.active) {
  background-color: #F3F4F6;
  border-color: #D1D5DB;
}

/* 音频播放控件 */
.audio-player {
  position: fixed;
  bottom: 48rpx;
  right: 48rpx;
  left: 48rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 64rpx rgba(0,0,0,0.15);
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1000;
}

.audio-info {
  flex: 1;
  margin-right: 32rpx;
}

.audio-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 16rpx;
}

.audio-progress {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #1E40AF;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.audio-time {
  font-size: 24rpx;
  color: #9CA3AF;
  min-width: 160rpx;
}

.audio-controls {
  display: flex;
  gap: 24rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F3F4F6;
  cursor: pointer;
  transition: all 0.3s ease;
}

.control-btn:hover {
  background-color: #E5E7EB;
  transform: scale(1.05);
}

.control-icon {
  font-size: 36rpx;
  color: #374151;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .filter-options {
    grid-template-columns: 1fr;
  }
  
  .material-grid {
    grid-template-columns: 1fr;
    margin: 0 48rpx 32rpx;
    gap: 24rpx;
  }
  
  .filter-container {
    margin: 0 48rpx 32rpx;
    padding: 32rpx;
  }
  
  .page-header {
    padding: 32rpx;
  }
  
  .page-title {
    font-size: 56rpx;
  }
  
  .audio-player {
    bottom: 32rpx;
    right: 32rpx;
    left: 32rpx;
    padding: 24rpx;
  }
  
  .card-header {
    height: 240rpx;
  }
  
  .card-body {
    padding: 32rpx;
  }
  
  .tab-item {
    padding: 12rpx 24rpx;
    font-size: 24rpx;
  }
  
  .filter-tabs {
    gap: 12rpx;
    padding-bottom: 24rpx;
    margin-bottom: 32rpx;
  }
  
  .filter-options {
    gap: 24rpx;
  }
  
  .filter-picker {
    padding: 16rpx 20rpx;
  }
  
  .filter-btn {
    padding: 16rpx 32rpx;
  }
}

@media (min-width: 768px) and (max-width: 1023px) {
  .filter-options {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .material-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .filter-options {
    grid-template-columns: repeat(4, 1fr);
  }
}