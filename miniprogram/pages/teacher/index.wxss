/* 全局样式 */
page {
  background-color: #F8F9FA;
  min-height: 100vh;
  font-family: PingFang SC;
  width: 100%;
  overflow-x: hidden;
}

.container {
  padding: 0 32rpx 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
  background-color: #F8F9FA;
}

/* 顶部导航 */
.top-nav {
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  padding: 35rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  border-radius: 24rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  margin: 32rpx 32rpx 32rpx;
}

.nav-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  margin-bottom: 16rpx;
}

.nav-actions {
  position: absolute;
  bottom: 20rpx;
  right: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-item {
  position: relative;
  cursor: pointer;
  padding: 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
}

.action-item:hover {
  background-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-2rpx);
}

.action-icon {
  font-size: 28rpx;
  color: #FFFFFF;
}

.badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FF3B30;
  color: #FFFFFF;
  font-size: 16rpx;
  font-weight: bold;
  padding: 4rpx 10rpx;
  border-radius: 16rpx;
  min-width: 24rpx;
  text-align: center;
  transform: translate(50%, -50%);
}

/* 教师个人信息 */
.teacher-profile {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx;
  background-color: #FFFFFF;
  margin: 24rpx 0 0;
  border-radius: 0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.profile-avatar {
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  overflow: hidden;
}

.profile-avatar image {
  width: 100%;
  height: 100%;
}

.profile-info {
  /* flex: 1; */
}

.profile-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.profile-subject {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.profile-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E88E5;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 功能模块 */
.function-modules {
  margin: 32rpx 0 0;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.module-section {
  margin-bottom: 40rpx;
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding: 0 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.module-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.module-item {
  background-color: #FFFFFF;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.module-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.module-item:hover {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 40rpx rgba(0,0,0,0.12);
}

.module-item:hover::before {
  transform: scaleX(1);
}

.student-icon::before {
  background-color: #1E88E5;
}

.course-icon::before {
  background-color: #43A047;
}

.material-icon::before {
  background-color: #E53935;
}

.stats-icon::before {
  background-color: #FB8C00;
}

.cross-icon::before {
  background-color: #8E24AA;
}

.lang-icon::before {
  background-color: #00ACC1;
}

.share-icon::before {
  background-color: #FDD835;
}

.train-icon::before {
  background-color: #7CB342;
}

.module-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.module-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  text-align: center;
}

.module-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.3;
}

/* 最近活动 */
.recent-activities {
  margin: 32rpx 0 0;
  background-color: #FFFFFF;
  border-radius: 0;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.activity-item:hover {
  background-color: #E3F2FD;
}

.activity-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  min-width: 48rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.activity-time {
  font-size: 24rpx;
  color: #999999;
}

.activity-status {
  font-size: 24rpx;
  color: #43A047;
  font-weight: bold;
  padding: 4rpx 16rpx;
  background-color: #E8F5E8;
  border-radius: 20rpx;
}

/* 通知弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.popup-content {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  width: 90%;
  max-width: 800rpx;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  animation: fadeInUp 0.3s ease;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 2rpx solid #E0E0E0;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.popup-close {
  font-size: 48rpx;
  color: #999999;
  cursor: pointer;
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.popup-close:hover {
  background-color: #F0F0F0;
  color: #333333;
}

.notification-list {
  padding: 32rpx 40rpx;
}

.notification-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
}

.notification-item:last-child {
  border-bottom: none;
}

.notification-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  min-width: 48rpx;
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.notification-time {
  font-size: 24rpx;
  color: #999999;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 0 24rpx 40rpx;
  }
  
  .top-nav {
    padding: 48rpx;
    margin: 32rpx 24rpx 32rpx;
  }
  
  .nav-title {
    font-size: 40rpx;
  }
  
  .nav-actions {
    bottom: 16rpx;
    right: 24rpx;
  }
  
  .action-icon {
    font-size: 24rpx;
  }
  
  .teacher-profile {
    padding: 32rpx 24rpx;
    margin: 24rpx 0 0;
    width: 100%;
  }
  
  .profile-avatar {
    margin-right: 0;
    margin-bottom: 32rpx;
  }
  
  .profile-stats {
    justify-content: center;
    gap: 40rpx;
  }
  
  .function-modules {
    margin: 32rpx 0 0;
    width: 100%;
  }
  
  .section-title {
    padding: 0 24rpx;
  }
  
  .module-grid {
    gap: 20rpx;
    padding: 0 24rpx;
  }
  
  .module-item {
    padding: 32rpx 20rpx;
  }
  
  .module-icon {
    font-size: 56rpx;
  }
  
  .module-title {
    font-size: 26rpx;
  }
  
  .module-desc {
    font-size: 22rpx;
  }
  
  .recent-activities {
    margin: 32rpx 0 0;
    width: 100%;
    padding: 32rpx 24rpx;
  }
}

@media (max-width: 320px) {
  .container {
    padding: 0 20rpx 40rpx;
  }
  
  .top-nav {
    padding: 32rpx;
    margin: 24rpx 20rpx 24rpx;
  }
  
  .nav-title {
    font-size: 36rpx;
  }
  
  .nav-actions {
    bottom: 12rpx;
    right: 20rpx;
  }
  
  .action-icon {
    font-size: 20rpx;
  }
  
  .teacher-profile {
    padding: 24rpx 16rpx;
  }
  
  .profile-avatar {
    width: 140rpx;
    height: 140rpx;
  }
  
  .section-title {
    padding: 0 16rpx;
  }
  
  .module-grid {
    grid-template-columns: 1fr;
    padding: 0 16rpx;
  }
  
  .module-item {
    padding: 28rpx 16rpx;
  }
  
  .module-icon {
    font-size: 48rpx;
  }
  
  .module-title {
    font-size: 24rpx;
  }
  
  .module-desc {
    font-size: 20rpx;
  }
  
  .recent-activities {
    padding: 32rpx 16rpx;
  }
}

/* 性能优化：减少重绘 */
.module-item, .activity-item {
  will-change: transform, box-shadow;
}

/* 触摸反馈 */
.module-item, .action-item {
  -webkit-tap-highlight-color: transparent;
}

.module-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.1);
}

