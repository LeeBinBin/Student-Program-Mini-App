.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  width: 100%;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 12rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
  width: calc(100% + 24rpx);
  margin-left: -12rpx;
  margin-right: -12rpx;
  margin-top: 0;
  box-sizing: border-box;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-actions {
  display: flex;
  gap: 16rpx;
}

.action-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 28rpx;
}

.content-container {
  flex: 1;
  padding: 24rpx 0;
  overflow-y: auto;
  background-color: #F8F9FA;
}

.search-bar {
  margin-bottom: 32rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #9CA3AF;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.category-tabs {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.category-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx 8rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  text-align: center;
  min-height: 100rpx;
  justify-content: center;
}



.category-tab.active {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-color: #3B82F6;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.category-icon {
  font-size: 28rpx;
}

.category-name {
  font-size: 20rpx;
  color: #666666;
  font-weight: 500;
  line-height: 1.3;
}

.category-tab.active .category-icon {
  transform: scale(1.1);
}

.category-tab.active .category-name {
  color: #FFFFFF;
  font-weight: 600;
}

.materials-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.material-item {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.material-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.material-icon {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.material-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.material-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.4;
}

.material-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.meta-tag {
  padding: 4rpx 16rpx;
  background-color: #3B82F6;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.meta-divider {
  color: #E5E7EB;
  font-size: 22rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #666666;
}

.material-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.material-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 4rpx;
}

.material-author {
  font-size: 24rpx;
  color: #9CA3AF;
}

.material-time {
  font-size: 24rpx;
  color: #9CA3AF;
}

.material-views {
  font-size: 24rpx;
  color: #3B82F6;
  font-weight: 500;
}

.material-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #F3F4F6;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.download {
  background-color: #3B82F6;
}

.action-btn.favorite {
  background-color: #FEE2E2;
}

.action-btn-icon {
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #9CA3AF;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.detail-modal {
  max-height: 70vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.modal-close:active {
  transform: scale(0.9);
}

.modal-body {
  padding: 32rpx 32rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #EF4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-picker {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.picker-value {
  font-size: 28rpx;
  color: #333333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9CA3AF;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx 24rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  resize: none;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 24rpx;
  background-color: #F8F9FA;
  border: 2rpx dashed #3B82F6;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  background-color: #EFF6FF;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #3B82F6;
  margin-bottom: 8rpx;
}

.upload-file-name {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

.detail-icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 24rpx;
  margin: 0 auto 24rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 16rpx;
}

.detail-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.detail-tag {
  padding: 8rpx 20rpx;
  background-color: #3B82F6;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.detail-divider {
  color: #E5E7EB;
  font-size: 24rpx;
}

.detail-text {
  font-size: 26rpx;
  color: #666666;
}

.detail-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background-color: #F8F9FA;
  border-radius: 16rpx;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666666;
}

.info-value {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #F3F4F6;
}

.modal-btn {
  flex: 1;
  padding: 28rpx 0;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.modal-btn.cancel {
  background-color: #F3F4F6;
  color: #666666;
}

.modal-btn.cancel:active {
  background-color: #E5E7EB;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.modal-btn.confirm:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}
