.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-back {
  width: 60rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.action-item {
  margin-left: 20rpx;
  padding: 10rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #333;
}

/* 统计概览 */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.overview-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.overview-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #165DFF;
  margin-bottom: 10rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

/* 筛选条件 */
.filter-section {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 20rpx;
}

.filter-item {
  flex: 1;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-item text {
  font-size: 24rpx;
  color: #333;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 统计区块 */
.stats-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 15rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.section-action {
  display: flex;
  align-items: center;
}

.action-text {
  font-size: 22rpx;
  color: #165DFF;
  margin-right: 5rpx;
}

.action-arrow {
  font-size: 20rpx;
  color: #165DFF;
}

/* 统计卡片 */
.learning-stats,
.adaptation-stats,
.resources-stats {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
  padding: 0 20rpx;
}

.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-content {
  padding: 20rpx;
}

/* 图表占位符 */
.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.chart-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.chart-text {
  font-size: 22rpx;
  color: #999;
}

/* 适应等级分布 */
.adaptation-levels {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.level-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.level-name {
  width: 80rpx;
  font-size: 22rpx;
  color: #333;
}

.level-bar {
  flex: 1;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.level-progress {
  height: 100%;
  background-color: #165DFF;
  border-radius: 10rpx;
}

.level-count {
  width: 60rpx;
  font-size: 22rpx;
  color: #666;
  text-align: right;
}

/* 问题分析 */
.problem-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.problem-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.problem-name {
  font-size: 22rpx;
  color: #333;
}

.problem-count {
  font-size: 22rpx;
  font-weight: bold;
  color: #165DFF;
}

/* 筛选弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-width: 500rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 20rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-option:last-child {
  border-bottom: none;
}

.option-text {
  font-size: 24rpx;
  color: #333;
}

.option-check {
  font-size: 24rpx;
  color: #165DFF;
  font-weight: bold;
}

/* 响应式设计 */
@media (min-width: 750rpx) {
  .learning-stats,
  .adaptation-stats,
  .resources-stats {
    grid-template-columns: repeat(2, 1fr);
  }
}
