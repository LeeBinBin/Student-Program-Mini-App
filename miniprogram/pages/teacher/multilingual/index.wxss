/* 全局样式 */
.container {
  min-height: 100vh;
  background-color: #F8F9FA;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 48rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-item:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.action-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 语言选择 */
.language-selector {
  padding: 32rpx 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.selector-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.language-tabs {
  display: flex;
  gap: 16rpx;
}

.language-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background-color: #F3F4F6;
  border-radius: 16rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  cursor: pointer;
}

.language-tab:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.language-tab.active {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  border-color: #3B82F6;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.tab-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 翻译工具 */
.translation-tool {
  padding: 32rpx 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.tool-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.translation-input {
  margin-bottom: 24rpx;
}

.input-area {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #F9FAFB;
  resize: none;
  transition: all 0.3s ease;
}

.input-area:focus {
  outline: none;
  border-color: #3B82F6;
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
  background-color: #FFFFFF;
}

.input-area::placeholder {
  color: #9CA3AF;
}

.translation-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  cursor: pointer;
  text-align: center;
}

.primary-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.primary-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}

.secondary-btn {
  background-color: #F3F4F6;
  color: #333333;
  border: 2rpx solid #E5E7EB;
}

.secondary-btn:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.translation-result {
  background-color: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #E5E7EB;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
}

.result-language {
  font-size: 20rpx;
  color: #3B82F6;
  font-weight: 500;
}

.result-content {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  min-height: 80rpx;
}

.result-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.result-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #666666;
  transition: all 0.3s ease;
  cursor: pointer;
}

.result-btn:hover {
  background-color: #F3F4F6;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-weight: 500;
}

/* 常用短语 */
.common-phrases {
  padding: 32rpx 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
  border-radius: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.phrases-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.phrase-item {
  padding: 20rpx;
  background-color: #F3F4F6;
  border-radius: 12rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  cursor: pointer;
}

.phrase-item:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.phrase-text {
  font-size: 20rpx;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.phrase-language {
  font-size: 16rpx;
  color: #666666;
  font-weight: 500;
}

/* 翻译历史 */
.translation-history {
  padding: 32rpx 48rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
  margin-bottom: 48rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #F9FAFB;
  border-radius: 12rpx;
  border: 2rpx solid #E5E7EB;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-input {
  font-size: 20rpx;
  color: #666666;
  line-height: 1.4;
}

.history-arrow {
  font-size: 16rpx;
  color: #9CA3AF;
  text-align: center;
}

.history-output {
  font-size: 20rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
}

.history-language {
  font-size: 16rpx;
  color: #3B82F6;
  font-weight: 500;
  align-self: flex-end;
}

.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 24rpx;
  color: #666666;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .top-nav {
    padding: 24rpx 32rpx;
  }

  .nav-title {
    font-size: 32rpx;
  }

  .language-selector,
  .translation-tool,
  .common-phrases,
  .translation-history {
    padding: 24rpx 32rpx;
  }

  .phrases-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .language-tabs {
    flex-direction: column;
  }

  .language-tab {
    flex-direction: row;
    justify-content: center;
    gap: 16rpx;
  }

  .tab-icon {
    margin-bottom: 0;
  }

  .translation-actions {
    flex-direction: column;
  }

  .result-actions {
    flex-direction: column;
  }

  .result-btn {
    justify-content: center;
  }
}
