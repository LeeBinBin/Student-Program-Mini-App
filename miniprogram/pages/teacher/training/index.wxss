.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-back {
  width: 60rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.action-item {
  margin-left: 20rpx;
  padding: 10rpx;
}

.action-icon {
  font-size: 32rpx;
  color: #333;
}

/* 搜索和筛选 */
.search-filter {
  padding: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  padding: 20rpx 0;
}

.filter-section {
  display: flex;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-item text {
  font-size: 24rpx;
  color: #333;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 培训课程列表 */
.courses-list {
  padding: 0 20rpx;
}

.course-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.course-thumbnail {
  position: relative;
  height: 200rpx;
}

.course-thumbnail image {
  width: 100%;
  height: 100%;
}

.course-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.course-content {
  padding: 20rpx;
}

.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.course-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.course-rating {
  display: flex;
  align-items: center;
}

.rating-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.rating-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #ff9500;
}

.course-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.course-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 22rpx;
  margin-right: 5rpx;
}

.meta-text {
  font-size: 20rpx;
  color: #999;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #333;
}

.course-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  padding: 15rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  background-color: #165DFF;
}

.secondary-btn {
  background-color: #f0f0f0;
}

.action-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.secondary-btn .action-text {
  color: #333;
}

/* 无数据提示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 筛选弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-width: 500rpx;
  overflow: hidden;
}

.my-courses-modal {
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 20rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-option:last-child {
  border-bottom: none;
}

.option-text {
  font-size: 24rpx;
  color: #333;
}

.option-check {
  font-size: 24rpx;
  color: #165DFF;
  font-weight: bold;
}

/* 我的课程 */
.my-courses-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.my-course-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.my-course-info {
  flex: 1;
  margin-right: 20rpx;
}

.my-course-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.my-course-progress {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.progress-bar {
  flex: 1;
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #165DFF;
  border-radius: 5rpx;
}

.progress-text {
  font-size: 20rpx;
  font-weight: bold;
  color: #165DFF;
  width: 60rpx;
  text-align: right;
}

.my-course-action {
  padding: 10rpx 20rpx;
  background-color: #165DFF;
  border-radius: 6rpx;
}

.my-course-action .action-text {
  font-size: 22rpx;
  color: #fff;
}

.empty-courses {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
}

.empty-courses .empty-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.empty-courses .empty-text {
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.empty-courses .empty-desc {
  font-size: 20rpx;
}
