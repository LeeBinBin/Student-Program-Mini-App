/* 全局样式 */
.container {
  min-height: 100vh;
  background-color: #F8F9FA;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-item:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.action-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 搜索和筛选 */
.search-filter {
  padding: 32rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #F3F4F6;
  border-radius: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.search-box:focus-within {
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
  background-color: #FFFFFF;
  border: 2rpx solid #3B82F6;
}

.search-icon {
  font-size: 24rpx;
  color: #6B7280;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333333;
}

.search-input::placeholder {
  color: #9CA3AF;
}

.filter-section {
  display: flex;
  gap: 12rpx;
  flex-wrap: nowrap;
  width: 100%;
  box-sizing: border-box;
  padding: 0 0;
}

.filter-item {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  background-color: #F3F4F6;
  border-radius: 16rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  cursor: pointer;
  width: calc(33.333% - 8rpx);
  box-sizing: border-box;
}

.filter-item text:first-child {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
}

.filter-item:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-arrow {
  font-size: 20rpx;
  color: #6B7280;
  margin-left: 8rpx;
}

/* 课程列表 */
.courses-list {
  padding: 32rpx 48rpx;
}

.course-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.course-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.course-info {
  flex: 1;
  margin-right: 24rpx;
}

.course-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.course-details {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #666666;
  margin-right: 12rpx;
}

.detail-divider {
  font-size: 24rpx;
  color: #9CA3AF;
  margin: 0 8rpx;
}

.course-status {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #333333;
  align-self: flex-start;
}

.course-content {
  margin-bottom: 28rpx;
}

.course-description {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.course-meta {
  display: flex;
  gap: 40rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.meta-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.course-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 18rpx 1rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  cursor: pointer;
}

.primary-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.primary-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}

.secondary-btn {
  background-color: #F3F4F6;
  color: #333333;
  border: 2rpx solid #E5E7EB;
}

.secondary-btn:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 无数据提示 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 筛选弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  width: 85%;
  max-width: 600rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalScale 0.3s ease;
}

@keyframes modalScale {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #E5E7EB;
  background-color: #F9FAFB;
  border-radius: 32rpx 32rpx 0 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #6B7280;
  cursor: pointer;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:hover {
  background-color: #E5E7EB;
  color: #333333;
}

.modal-body {
  padding: 32rpx 40rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter-option:last-child {
  border-bottom: none;
}

.filter-option:hover {
  background-color: #F9FAFB;
  padding-left: 20rpx;
  border-radius: 12rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333333;
}

.option-check {
  font-size: 24rpx;
  color: #3B82F6;
  font-weight: bold;
}

/* 编辑模态框样式 */
.edit-modal {
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.form-group {
  margin-bottom: 36rpx;
}

.form-row {
  display: flex;
  gap: 28rpx;
  margin-bottom: 36rpx;
}

.form-group.half {
  flex: 1;
  margin-bottom: 0;
}

.form-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 16rpx;
  display: block;
  line-height: 1.4;
}

.form-input {
  width: 100%;
  padding: 28rpx 32rpx;
  border: 2rpx solid #D1D5DB;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1F2937;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
  box-sizing: border-box;
  line-height: 1.4;
  min-height: 100rpx;
}

.form-input:focus {
  outline: none;
  border-color: #3B82F6;
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
}

.form-input::placeholder {
  color: #9CA3AF;
  font-size: 30rpx;
}

.form-textarea {
  width: 100%;
  padding: 24rpx 28rpx;
  border: 2rpx solid #D1D5DB;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #1F2937;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
  box-sizing: border-box;
  min-height: 200rpx;
  resize: none;
  line-height: 1.4;
}

.form-textarea:focus {
  outline: none;
  border-color: #3B82F6;
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
}

.form-textarea::placeholder {
  color: #9CA3AF;
  font-size: 30rpx;
}

.modal-actions {
  display: flex;
  gap: 28rpx;
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #E5E7EB;
  justify-content: center;
}

.modal-actions .action-btn {
  flex: 0 0 auto;
  width: 300rpx;
  text-align: center;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  cursor: pointer;
  line-height: 1.4;
}

.modal-actions .action-btn.primary-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}

.modal-actions .action-btn.primary-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.5);
}

.modal-actions .action-btn.secondary-btn {
  background-color: #F3F4F6;
  color: #333333;
  border: 2rpx solid #E5E7EB;
}

.modal-actions .action-btn.secondary-btn:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .top-nav {
    padding: 24rpx 32rpx;
  }

  .nav-title {
    font-size: 32rpx;
  }

  .search-filter {
    padding: 24rpx 32rpx;
  }

  .courses-list {
    padding: 24rpx 32rpx;
  }

  .course-item {
    padding: 28rpx;
  }

  .filter-section {
    flex-direction: column;
  }

  .filter-item {
    width: 100%;
    min-width: unset;
  }

  .course-actions {
    flex-direction: column;
  }

  .action-btn {
    width: 100%;
    text-align: center;
  }

  .course-meta {
    flex-direction: column;
    gap: 16rpx;
  }

  .meta-item {
    justify-content: flex-start;
  }

  .form-row {
    flex-direction: column;
  }

  .form-group.half {
    margin-bottom: 36rpx;
  }

  .modal-actions {
    flex-direction: column;
    gap: 24rpx;
    align-items: center;
  }

  .form-label {
    font-size: 28rpx;
  }

  .form-input {
    font-size: 28rpx;
    padding: 24rpx 28rpx;
    min-height: 90rpx;
  }

  .form-textarea {
    font-size: 28rpx;
    padding: 24rpx 28rpx;
    min-height: 160rpx;
  }

  .modal-actions .action-btn {
    font-size: 28rpx;
    padding: 24rpx;
    width: 280rpx;
  }
}
