.container {
  min-height: 100vh;
  background-color: #F8F9FA;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-item:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.action-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 课程基本信息 */
.course-info {
  background-color: #FFFFFF;
  margin: 32rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.course-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.course-status {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.course-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.course-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666666;
}

.meta-divider {
  font-size: 24rpx;
  color: #9CA3AF;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E5E7EB;
}

/* 课程简介 */
.course-description {
  margin-bottom: 40rpx;
}

.desc-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 课程时间 */
.course-schedule {
  margin-bottom: 40rpx;
}

.schedule-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.schedule-item {
  font-size: 28rpx;
  color: #666666;
}

/* 跨境适配信息 */
.cross-border-info {
  margin-bottom: 40rpx;
}

.cross-info-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.cross-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.cross-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.cross-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.cross-tag {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.cross-tag.guangdong {
  background-color: #3B82F6;
}

.cross-tag.hongkong {
  background-color: #EC4899;
}

.adaptation-level {
  display: inline-block;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 课程管理模块 */
.course-management {
  background-color: #FFFFFF;
  margin: 0 32rpx 32rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.management-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.3s ease;
  cursor: pointer;
}

.management-item:last-child {
  border-bottom: none;
}

.management-item:hover {
  background-color: #F9FAFB;
  margin: 0 -40rpx;
  padding: 32rpx 40rpx;
  border-radius: 12rpx;
}

.item-icon {
  font-size: 48rpx;
  margin-right: 32rpx;
  width: 60rpx;
  text-align: center;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #666666;
}

.item-arrow {
  font-size: 28rpx;
  color: #CCCCCC;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 32rpx 40rpx;
  display: flex;
  gap: 24rpx;
  flex-direction: column;
}

.btn-primary,
.btn-secondary,
.btn-danger {
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}

.btn-secondary {
  background-color: #F3F4F6;
  color: #333333;
  border: 2rpx solid #E5E7EB;
}

.btn-secondary:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-danger {
  background-color: #EF4444;
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.btn-danger:hover {
  background-color: #DC2626;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(239, 68, 68, 0.4);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .course-info,
  .course-management {
    margin: 24rpx;
    padding: 32rpx;
  }

  .course-name {
    font-size: 36rpx;
  }

  .course-meta {
    flex-direction: column;
    gap: 8rpx;
  }

  .management-item:hover {
    margin: 0 -32rpx;
    padding: 32rpx 32rpx;
  }

  .action-buttons {
    padding: 0 24rpx 32rpx;
  }

  .btn-primary,
  .btn-secondary,
  .btn-danger {
    height: 90rpx;
    font-size: 32rpx;
  }
}
