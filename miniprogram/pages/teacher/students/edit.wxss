.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
}

.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-placeholder {
  width: 48rpx;
}

.form-container {
  flex: 1;
  padding: 32rpx 32rpx;
  overflow-y: auto;
}

.form-section {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #EF4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.readonly-input {
  background-color: #E9ECEF;
  color: #666666;
}

.form-input:focus {
  border-color: #3B82F6;
  background-color: #FFFFFF;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.picker-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.picker-arrow {
  font-size: 20rpx;
  color: #9CA3AF;
}

.type-selector {
  display: flex;
  gap: 16rpx;
}

.type-option {
  flex: 1;
  padding: 32rpx 24rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.type-option.active {
  background-color: #3B82F6;
  border-color: #3B82F6;
  border-width: 3rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}

.type-icon {
  font-size: 48rpx;
}

.type-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.type-option.active .type-text {
  color: #FFFFFF;
  font-weight: bold;
}

.subjects-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  width: 100%;
}

.subject-item {
  padding: 20rpx 28rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  min-width: 160rpx;
  flex-shrink: 0;
}

.subject-item.selected {
  background-color: #1E40AF;
  border-color: #1E40AF;
  border-width: 4rpx;
  box-shadow: 0 6rpx 20rpx rgba(30, 64, 175, 0.5);
  transform: scale(1.05);
}

.subject-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.subject-icon {
  font-size: 28rpx;
}

.subject-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.subject-item.selected .subject-text {
  color: #FFFFFF;
  font-weight: bold;
  font-size: 28rpx;
}

.switch-container {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.status-selector {
  display: flex;
  gap: 16rpx;
}

.status-option {
  flex: 1;
  padding: 24rpx 20rpx;
  background-color: #F8F9FA;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.status-option.active {
  background-color: #3B82F6;
  border-color: #3B82F6;
  border-width: 3rpx;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}

.status-icon {
  font-size: 36rpx;
}

.status-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.status-option.active .status-text {
  color: #FFFFFF;
  font-weight: bold;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 16rpx;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  padding: 28rpx 0;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-btn.cancel {
  background-color: #F3F4F6;
  color: #666666;
}

.action-btn.cancel:hover {
  background-color: #E5E7EB;
}

.action-btn.confirm {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.action-btn.confirm:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.4);
}
