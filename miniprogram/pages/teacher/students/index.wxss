/* ÂÖ®Â±ÄÊ†∑Âºè */
.container {
  min-height: 100vh;
  background-color: #F8F9FA;
  width: 100%;
  overflow-x: hidden;
}

/* È°∂ÈÉ®ÂØºËà™ */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx;
  background: linear-gradient(135deg, #1E40AF 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(30, 64, 175, 0.2);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.nav-back {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.nav-back:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
  margin: 0 48rpx;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-item:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.action-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* ÊêúÁ¥¢ÂíåÁ≠õÈÄâ */
.search-filter {
  padding: 32rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #F3F4F6;
  border-radius: 24rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.search-box:focus-within {
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
  background-color: #FFFFFF;
  border: 2rpx solid #3B82F6;
}

.search-icon {
  font-size: 24rpx;
  color: #6B7280;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333333;
}

.search-input::placeholder {
  color: #9CA3AF;
}

.filter-section {
  display: flex;
  gap: 12rpx;
  flex-wrap: nowrap;
  width: 100%;
  box-sizing: border-box;
  padding: 0 0;
}

.filter-item {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  background-color: #F3F4F6;
  border-radius: 16rpx;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  cursor: pointer;
  width: calc(33.333% - 8rpx);
  box-sizing: border-box;
}

.filter-item text:first-child {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
}

.filter-item:hover {
  background-color: #E5E7EB;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-arrow {
  font-size: 20rpx;
  color: #6B7280;
  margin-left: 8rpx;
}

/* Â≠¶ÁîüÂàóË°® */
.students-list {
  padding: 32rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.student-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 0;
  padding: 32rpx 32rpx;
  margin-bottom: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #F3F4F6;
}

.student-item:last-child {
  border-bottom: none;
}

.student-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  position: relative;
}

.student-avatar::after {
  content: 'üéì';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 48rpx;
  z-index: 10;
}

.student-avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.student-info {
  flex: 1;
  min-width: 0;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.student-details {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.detail-item {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
}

.detail-divider {
  font-size: 24rpx;
  color: #9CA3AF;
  margin: 0 8rpx;
}

.student-phone {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.phone-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.phone-number {
  font-size: 24rpx;
  color: #3B82F6;
  font-weight: 500;
}

.student-subjects {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.subjects-label {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
}

.subjects-value {
  font-size: 24rpx;
  color: #10B981;
  font-weight: 500;
}

.student-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #333333;
}

.student-actions {
  margin-left: 24rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  cursor: pointer;
}

.edit-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

.detail-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
}

.action-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* Êó†Êï∞ÊçÆÊèêÁ§∫ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

/* Á≠õÈÄâÂºπÁ™ó */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  width: 90%;
  max-width: 500rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalScale 0.3s ease;
  box-sizing: border-box;
}

@keyframes modalScale {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #E5E7EB;
  background-color: #F9FAFB;
  border-radius: 32rpx 32rpx 0 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 36rpx;
  color: #6B7280;
  cursor: pointer;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:hover {
  background-color: #E5E7EB;
  color: #333333;
}

.modal-body {
  padding: 32rpx 40rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.3s ease;
  cursor: pointer;
}

.filter-option:last-child {
  border-bottom: none;
}

.filter-option:hover {
  background-color: #F9FAFB;
  padding-left: 16rpx;
  border-radius: 12rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333333;
}

.option-check {
  font-size: 24rpx;
  color: #3B82F6;
  font-weight: bold;
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 768px) {
  .top-nav {
    padding: 24rpx 24rpx;
  }

  .nav-title {
    font-size: 32rpx;
  }

  .search-filter {
    padding: 24rpx 24rpx;
  }

  .students-list {
    padding: 24rpx 24rpx;
  }

  .student-item {
    flex-direction: column;
    align-items: flex-start;
    padding: 24rpx 24rpx;
  }

  .student-avatar {
    margin-bottom: 20rpx;
  }

  .student-actions {
    margin-left: 0;
    margin-top: 20rpx;
    align-self: flex-end;
  }

  .filter-section {
    flex-direction: column;
  }

  .filter-item {
    width: 100%;
  }
}