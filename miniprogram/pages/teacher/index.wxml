<view class="container">
  <!-- 顶部导航 -->
  <view class="top-nav">
    <view class="nav-title">教师中心</view>
    <view class="nav-actions">
      <view class="action-item" bindtap="showNotification">
        <text class="action-icon">🔔</text>
        <view class="badge" wx:if="{{notificationCount}}" style="display: {{notificationCount > 0 ? 'block' : 'none'}};">{{notificationCount}}</view>
      </view>
      <view class="action-item" bindtap="showSettings">
        <text class="action-icon">⚙️</text>
      </view>
    </view>
  </view>

  <!-- 教师个人信息 -->
  <view class="teacher-profile">
    <view class="profile-avatar">
      <image src="/images/icons/avatar.png"></image>
    </view>
    <view class="profile-info">
      <view class="profile-stats-up">
        <view class="profile-name">陈老师</view>
        <view class="profile-subject">数学教师 | 跨境教育专家</view>
      </view>
      <view class="profile-stats">
        <view class="stat-item">
          <view class="stat-value">{{studentsCount}}</view>
          <view class="stat-label">学生</view>
        </view>
        <view class="stat-item">
          <view class="stat-value">{{coursesCount}}</view>
          <view class="stat-label">课程</view>
        </view>
        <view class="stat-item">
          <view class="stat-value">{{materialsCount}}</view>
          <view class="stat-label">素材</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 功能模块 -->
  <view class="function-modules">
    <view class="module-section">
      <view class="section-title">教学管理</view>
      <view class="module-grid">
        <view class="module-item" bindtap="navigateToStudents">
          <view class="module-icon student-icon">👥</view>
          <view class="module-title">学生管理</view>
          <view class="module-desc">跨境学生信息管理</view>
        </view>
        <view class="module-item" bindtap="navigateToCourses">
          <view class="module-icon course-icon">📚</view>
          <view class="module-title">课程管理</view>
          <view class="module-desc">粤港教材课程规划</view>
        </view>
        <view class="module-item" bindtap="navigateToMaterials">
          <view class="module-icon material-icon">📖</view>
          <view class="module-title">素材中心</view>
          <view class="module-desc">跨版教学资源</view>
        </view>
        <view class="module-item" bindtap="navigateToStatistics">
          <view class="module-icon stats-icon">📊</view>
          <view class="module-title">教学统计</view>
          <view class="module-desc">学生学习数据分析</view>
        </view>
      </view>
    </view>

    <view class="module-section">
      <view class="section-title">跨境教育特色</view>
      <view class="module-grid">
        <view class="module-item" bindtap="navigateToCrossBorder">
          <view class="module-icon cross-icon">🌉</view>
          <view class="module-title">跨境适配</view>
          <view class="module-desc">粤港教材知识点对标</view>
        </view>
        <view class="module-item" bindtap="navigateToMultilingual">
          <view class="module-icon lang-icon">🌍</view>
          <view class="module-title">多语言教学</view>
          <view class="module-desc">中/英/粤三语支持</view>
        </view>
        <view class="module-item" bindtap="navigateToResourceShare">
          <view class="module-icon share-icon">🤝</view>
          <view class="module-title">资源分享</view>
          <view class="module-desc">教师间经验交流</view>
        </view>
        <view class="module-item" bindtap="navigateToTraining">
          <view class="module-icon train-icon">🎓</view>
          <view class="module-title">教师培训</view>
          <view class="module-desc">跨境教育专业培训</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 最近活动 -->
  <view class="recent-activities">
    <view class="section-title">最近活动</view>
    <view class="activity-list">
      <view wx:for="{{recentActivities}}" wx:key="index" class="activity-item">
        <view class="activity-icon">{{item.icon}}</view>
        <view class="activity-content">
          <view class="activity-title">{{item.title}}</view>
          <view class="activity-time">{{item.time}}</view>
        </view>
        <view class="activity-status" wx:if="{{item.status}}">{{item.status}}</view>
      </view>
    </view>
  </view>

  <!-- 通知弹窗 -->
  <view class="popup" wx:if="{{showNotification}}" bindtap="hideNotification">
    <view class="popup-content" catchtap="catchTap">
      <view class="popup-header">
        <view class="popup-title">通知中心</view>
        <view class="popup-close" bindtap="hideNotification">×</view>
      </view>
      <view class="notification-list">
        <view wx:for="{{notifications}}" wx:key="index" class="notification-item">
          <view class="notification-icon">{{item.icon}}</view>
          <view class="notification-content">
            <view class="notification-title">{{item.title}}</view>
            <view class="notification-time">{{item.time}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>