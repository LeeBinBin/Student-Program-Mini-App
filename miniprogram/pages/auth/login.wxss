.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 0 20px;
  background-color: #f5f5f5;
}

/* 顶部：用户头像占位区 */
.avatar-section {
  margin-bottom: 40rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.avatar-icon {
  font-size: 60rpx;
}

/* 中部欢迎区 */
.welcome-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 24rpx;
  color: #666666;
}

/* 核心操作区 */
.action-section {
  width: 100%;
  max-width: 400rpx;
  margin-bottom: 80rpx;
}

.wechat-login-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #07C160, #05AE57);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.login-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #1890FF, #096DD9);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f0f0f0;
  color: #333333;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部协议区 */
.agreement-section {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.agreement-text {
  font-size: 20rpx;
  color: #999999;
}

.agreement-link {
  color: #1890FF;
  text-decoration: underline;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  max-width: 500rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 32rpx;
  color: #999999;
}

.modal-body {
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 24rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 70rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #333333;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  gap: 20rpx;
}

.form-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.primary-btn {
  background: linear-gradient(135deg, #1890FF, #096DD9);
  color: #ffffff;
}

.secondary-btn {
  background-color: #f0f0f0;
  color: #333333;
}
