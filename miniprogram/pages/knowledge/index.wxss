/* 全局样式 */
.page {
  background-color: #F5F7FA;
  min-height: 100vh;
}

.container {
  padding: 0;
  min-height: 100vh;
  background-color: #F5F7FA;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #1E40AF 20%, #3B82F6 100%);
  padding: 64rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  margin-bottom: 64rpx;
}

.page-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

/* 筛选条件 */
.filter-container {
  background-color: #FFFFFF;
  margin: 0 64rpx 64rpx;
  padding: 64rpx;
  border-radius: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.08);
}

.filter-content {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 56rpx;
  margin-bottom: 56rpx;
}

.filter-item {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.filter-label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.filter-picker {
  border: 4rpx solid #E5E7EB;
  border-radius: 24rpx;
  padding: 32rpx 40rpx;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

.filter-picker:focus-within {
  border-color: #3B82F6;
  box-shadow: 0 0 0 8rpx rgba(59, 130, 246, 0.1);
  transform: translateY(-2rpx);
}

.picker-text {
  font-size: 32rpx;
  color: #333333;
}

.filter-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding: 32rpx 64rpx;
  border-radius: 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  width: fit-content;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
}

.filter-btn:hover {
  background: linear-gradient(135deg, #2563EB 0%, #1E3A8A 100%);
  box-shadow: 0 12rpx 32rpx rgba(59, 130, 246, 0.4);
  transform: translateY(-4rpx);
}

/* 对标结果展示 */
.result-container {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 64rpx;
  margin: 0 64rpx 64rpx;
}

/* 左侧知识点列表 */
.knowledge-container {
  background-color: #FFFFFF;
  border-radius: 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.08);
  overflow: hidden;
}

/* 标签切换 */
.knowledge-tabs {
  display: flex;
  border-bottom: 2rpx solid #E5E7EB;
  background-color: #F9FAFB;
}

.tab-item {
  flex: 1;
  padding: 40rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #6B7280;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item:hover {
  color: #3B82F6;
  background-color: #F3F4F6;
}

.tab-item.active {
  color: #3B82F6;
  background-color: #FFFFFF;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #3B82F6 0%, #1E40AF 100%);
}

/* 标签内容 */
.knowledge-content {
  padding: 64rpx;
}

.tab-content {
  min-height: 900rpx;
}

.knowledge-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.knowledge-item {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  border-left: 8rpx solid transparent;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.knowledge-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.1);
}

.overlap-item {
  border-left-color: #3B82F6;
  background-color: rgba(59, 130, 246, 0.05);
}

.overlap-item:hover {
  background-color: rgba(59, 130, 246, 0.1);
}

.guangdong-item {
  border-left-color: #EF4444;
  background-color: rgba(239, 68, 68, 0.05);
}

.guangdong-item:hover {
  background-color: rgba(239, 68, 68, 0.1);
}

.hongkong-item {
  border-left-color: #F59E0B;
  background-color: rgba(245, 158, 11, 0.05);
}

.hongkong-item:hover {
  background-color: rgba(245, 158, 11, 0.1);
}

.knowledge-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.knowledge-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* 对比信息 */
.comparison-info {
  background-color: rgba(0,0,0,0.03);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 24rpx;
  border-left: 6rpx solid #3B82F6;
  animation: slideDown 0.3s ease forwards;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.comparison-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.comparison-item:last-child {
  margin-bottom: 0;
}

.comparison-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  min-width: 160rpx;
  flex-shrink: 0;
}

.comparison-value {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  line-height: 1.5;
}

/* 右侧可视化对比图 */
.chart-container {
  background-color: #FFFFFF;
  border-radius: 40rpx;
  padding: 64rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.chart-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 8rpx;
}

.chart-subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
}

.chart-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 560rpx;
  border-radius: 24rpx;
  background-color: #F9FAFB;
  padding: 40rpx;
  box-shadow: inset 0 4rpx 8rpx rgba(0,0,0,0.05);
}

.chart-img {
  width: 100%;
  max-width: 700rpx;
  height: auto;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.chart-img:hover {
  transform: scale(1.02);
}

/* 统计数据 */
.chart-stats {
  display: flex;
  justify-content: space-around;
  margin: 48rpx 0;
  padding: 40rpx;
  background-color: rgba(59, 130, 246, 0.05);
  border-radius: 24rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.1);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #3B82F6;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.chart-legend {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-top: 32rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.legend-item:hover {
  background-color: #F9FAFB;
}

.legend-color {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.overlap-color {
  background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
}

.guangdong-color {
  background: linear-gradient(135deg, #EF4444 0%, #B91C1C 100%);
}

.hongkong-color {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
}

.legend-text {
  font-size: 32rpx;
  color: #666666;
  flex: 1;
  font-weight: 500;
}

/* 知识点详情弹窗 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.popup-content {
  background-color: #FFFFFF;
  border-radius: 40rpx;
  padding: 0;
  max-width: 90%;
  max-height: 85vh;
  overflow: hidden;
  position: relative;
  box-shadow: 0 40rpx 120rpx rgba(0,0,0,0.3);
  width: 100%;
  max-width: 1400rpx;
  transform: scale(0.95);
  animation: popupScale 0.3s ease forwards;
}

@keyframes popupScale {
  to {
    transform: scale(1);
  }
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 64rpx;
  border-bottom: 2rpx solid #E5E7EB;
  background: linear-gradient(135deg, #F9FAFB 0%, #FFFFFF 100%);
}

.popup-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
}

.popup-close {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #9CA3AF;
  background-color: #F3F4F6;
}

.popup-close:hover {
  background-color: #E5E7EB;
  color: #6B7280;
  transform: scale(1.1);
}

.popup-close text {
  font-size: 48rpx;
  line-height: 1;
}

/* 详情标签切换 */
.detail-tabs {
  display: flex;
  border-bottom: 2rpx solid #E5E7EB;
  background-color: #F9FAFB;
}

.detail-tabs .tab-item {
  flex: 1;
  padding: 32rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #6B7280;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.detail-tabs .tab-item:hover {
  color: #3B82F6;
  background-color: #F3F4F6;
}

.detail-tabs .tab-item.active {
  color: #3B82F6;
  background-color: #FFFFFF;
  font-weight: 600;
}

.detail-tabs .tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #3B82F6 0%, #1E40AF 100%);
}

/* 详情内容 */
.detail-content {
  padding: 64rpx;
  max-height: 900rpx;
  overflow-y: auto;
}

.content-section {
  margin-bottom: 64rpx;
}

.content-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #3B82F6 0%, #1E40AF 100%);
  border-radius: 4rpx;
}

.content-text {
  font-size: 32rpx;
  color: #4B5563;
  line-height: 1.6;
}

.content-text.example {
  background-color: #F9FAFB;
  padding: 40rpx;
  border-radius: 24rpx;
  border-left: 8rpx solid #3B82F6;
  font-family: 'Courier New', monospace;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .filter-content {
    grid-template-columns: 1fr;
  }
  
  .result-container {
    grid-template-columns: 1fr;
    margin: 0 40rpx 40rpx;
    gap: 48rpx;
  }
  
  .chart-container {
    order: -1;
  }
  
  .page-header {
    padding: 48rpx;
  }
  
  .page-title {
    font-size: 56rpx;
  }
  
  .filter-container {
    margin: 0 40rpx 40rpx;
    padding: 48rpx;
  }
  
  .knowledge-content {
    padding: 48rpx;
  }
  
  .chart-container {
    padding: 48rpx;
  }
  
  .popup-header {
    padding: 48rpx;
  }
  
  .popup-title {
    font-size: 40rpx;
  }
  
  .detail-content {
    padding: 48rpx;
  }
  
  .knowledge-item {
    padding: 40rpx;
  }
  
  .tab-item {
    padding: 32rpx;
    font-size: 28rpx;
  }
  
  /* 对比信息响应式 */
  .comparison-info {
    padding: 24rpx;
  }
  
  .comparison-label {
    min-width: 140rpx;
    font-size: 26rpx;
  }
  
  .comparison-value {
    font-size: 26rpx;
  }
  
  /* 统计数据响应式 */
  .chart-stats {
    flex-direction: column;
    gap: 32rpx;
    padding: 32rpx;
  }
  
  .stat-item {
    padding: 16rpx 0;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  /* 图表响应式 */
  .chart-wrapper {
    min-height: 400rpx;
  }
  
  .chart-img {
    max-width: 100%;
  }
  
  .chart-title {
    font-size: 36rpx;
  }
  
  .chart-subtitle {
    font-size: 24rpx;
  }
  
  /* 图例响应式 */
  .chart-legend {
    gap: 24rpx;
  }
  
  .legend-item {
    padding: 16rpx 24rpx;
    gap: 24rpx;
  }
  
  .legend-text {
    font-size: 26rpx;
  }
}

/* 小屏幕设备 */
@media (max-width: 480px) {
  .page-header {
    padding: 40rpx;
  }
  
  .page-title {
    font-size: 48rpx;
  }
  
  .filter-container {
    margin: 0 32rpx 32rpx;
    padding: 40rpx;
  }
  
  .result-container {
    margin: 0 32rpx 32rpx;
    gap: 40rpx;
  }
  
  .knowledge-content {
    padding: 40rpx;
  }
  
  .chart-container {
    padding: 40rpx;
  }
  
  .knowledge-item {
    padding: 32rpx;
  }
  
  .knowledge-title {
    font-size: 32rpx;
  }
  
  .knowledge-desc {
    font-size: 26rpx;
  }
  
  .tab-item {
    padding: 28rpx;
    font-size: 26rpx;
  }
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 16rpx;
}

::-webkit-scrollbar-track {
  background: #F1F1F1;
  border-radius: 8rpx;
}

::-webkit-scrollbar-thumb {
  background: #CBD5E1;
  border-radius: 8rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #94A3B8;
}